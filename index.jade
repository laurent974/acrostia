- pageTitle= "Welcome on Acrostia!"
include public/views/_header
doctype html
html(lang="fr")
	head
		title= pageTitle
		meta(http-equiv="content-type", content="text/html; charset=UTF-8")
		meta(name="description", content="Acrostia free template")
		meta(name="keywords", content="Acrostia, responsive")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		// if lt IE 9
			script(type="text/javascript", src="public/vendor/html5shiv-min.js")

		link(rel="stylesheet", href="public/css/main.css")
		link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Lato:300,400,700,900")
		link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Damion")

		//Carousel
		link(rel="stylesheet", href="public/css/owl.carousel.css")
		link(rel="stylesheet", href="public/css/owl.theme.css")

	body
		#home.section
			.bg
			.global
				+header('home')
							
		include public/views/_services
		include public/views/_about
		include public/views/_work
		include public/views/_contacts

		script(src="public/vendor/jquery-1.11.1.min.js")
		script(src="public/vendor/owl.carousel.min.js")
		script(src="public/js/main.js")